{% extends 'AdminBundle:Default:index.html.twig' %}
{% block style %}
{% endblock %}
{% block job %}
<div class="panel panel-default chat">
					<div class="panel-heading" style="background-color:#ffc800">
						Trajet({{nb_tra}})
						<span class="pull-right clickable panel-toggle panel-button-tab-left">
							<em class="fa fa-toggle-up"></em></span>
					</div>
					<div class="panel-body">
						<ul>
							{% for trajet in trajet %}
							<li class="right clearfix"><span >
								<img src="{{ asset('uploads/images/' ~ trajet.idannonceur.path) }}" alt="User Avatar" class="img-circle" width="35" height="35" class=" pull-right">
								</span>
								<div class="chat-body clearfix">
									<div class="header"><strong class="pull-left primary-font">
									{{ trajet.idannonceur.username}}</strong> <small class="text-muted">{{ trajet.datePublication|date('Y/m/d') }}</small></div><br>
									<strong> De: {{ trajet.paysDepart  }}</strong>
                                    <i class="fas fa-arrow-right"> 
                                     </i><strong> A :{{ trajet.paysDestination}}</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                                     <i class="fas fa-calendar-alt"></i>
                                     <b>Date Debut:</b>&nbsp;{{ trajet.dateDebut|date('d/m/Y')}}&nbsp;&nbsp;&nbsp;
                                     <b>Date Fin :</b>&nbsp;{{ trajet.dateFin|date('d/m/Y')}}
                                     <br><br>
                                     <i class="fas fa-info-circle" style="font-size:26px;color:blue"></i>
                                     <table class="table">
                                     	 <tbody>
                                     	 	<tr>
                                     	 		<td><b>Titre:</b>&nbsp;{{ trajet.titre}}</td>
                                     	 		<td><b>Type:</b>&nbsp;{{ trajet.type}}</td>
                                     	 		<td><b>Mode:</b>&nbsp;{{ trajet.mode}}</td>
                                     	 	</tr>
                                     	 	<tr>
                                     	 		<td><b>Poids a transporter:</b>&nbsp;{{ trajet.poidsAtransporter}}</td>
                                     	 		<td><b>prix(Kg):</b>&nbsp;{{ trajet.prixKg}}</td>
                                     	 		<td><b>details:</b>&nbsp;{{ trajet.details}}</td>
                                     	 	</tr>
                                     	 </tbody>
                                     </table>
                                     <br>
								</div>
							</li>
							{% endfor %}
						</ul>
					</div>
					
				</div>
{% endblock %}