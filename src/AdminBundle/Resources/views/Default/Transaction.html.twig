      <th scope="col">Pay</th>
      <th scope="col">payer</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>


    
        {% for tran in tran %}
          {% if tran.status == 1 and tran.IsOk == 0 %}
          {% for adpay in adpay %}
          
        <tr>
      <th scope="row">
        <img src="{{ asset('uploads/images/' ~ tran.idColi.idannonceur.path) }}" width="35" height="35" style="border-radius:50%" onclick="image(this)"></th>

    
      <td>{{ tran.idColi.idannonceur.nom }}</td>
      <td>{{ (tran.idColi.PrixColis) +5}}</td>
      <td>
        {% if adpay.idcoli == tran.idColi %}
          {{ adpay.iduser.nom }}
