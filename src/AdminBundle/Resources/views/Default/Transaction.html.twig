</form>

{% else %}
<span >pas encors</span>
{% endif %}
</td>
<td>
  {% if adpay.idcoli == tran.idColi and tran.status == 1 %}
  <a href="{{ path('ConfirmPay',{'id':adpay.id, 'idd':tran.id})}}">Supprimer</a></td>
{% endif %}
</tr>

  {% endfor %} 
  {% endif %} 
